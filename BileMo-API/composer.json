{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-bundle": "^2.11",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.0",
        "lexik/jwt-authentication-bundle": "^2.20",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpstan/phpdoc-parser": "^1.25",
        "symfony/console": "7.0.*",
        "symfony/dotenv": "7.0.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "7.0.*",
        "symfony/property-access": "7.0.*",
        "symfony/property-info": "7.0.*",
        "symfony/runtime": "7.0.*",
        "symfony/security-bundle": "7.0.*",
        "symfony/serializer": "7.0.*",
        "symfony/translation": "7.0.*",
        "symfony/validator": "7.0.*",
        "symfony/yaml": "7.0.*",
        "willdurand/hateoas-bundle": "*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "prepare": [
            "php bin/console doctrine:database:drop --if-exists -f",
            "php bin/console doctrine:database:create",
            "php bin/console doctrine:schema:update -f",
            "php bin/console doctrine:fixtures:load -n"
        ],
        "csall": [
            "@csfixerfix",
            "@csfixercheck",
            "@phpstan"
        ],
        "csfixerfix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php -v",
        "csfixercheck": "php-cs-fixer check --config=.php-cs-fixer.dist.php -v",
        "phpstan": "phpstan analyse -c phpstan.neon -vvv --memory-limit=1024M"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "phpstan": {
        "includes": [
            "extension.neon"
        ]
        },
        "phpstan/extension-installer": {
            "ignore": [
              "phpstan/phpstan-phpunit"
            ]
          },  
        "symfony": {
            "allow-contrib": false,
            "require": "7.0.*"
        }
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.5",
        "fakerphp/faker": "^1.23",
        "friendsofphp/php-cs-fixer": "^3.49",
        "pedrotroller/php-cs-custom-fixer": "^2.33",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-symfony": "^1.3"
    }
}
